{
	"port": 80,

	"crowdsearch": {
		
		"cache": false,

		"hostname": "pc-volonterio",
		"port": 8080,
		"appPath": "/CrowdSearch_prototype_v2",

		"API": {
			"details": {
				"method": "GET",
				"path": "getTask.do",
				"params": {
					"q": "taskID",
					"selectors": "fields"
				}
			},
			"list": {
				"method": "GET",
				"path": "getTaskComposition.do",
				"params": {
					"q": "taskID",
					"selectors": "fields"
				}
			},
			"save": {
				"method": "POST",
				"path": "postAnswer.do"
			}
		}
	},
	
	"task_repository": {
		"path": "tasks"
	},

	"mongo": {
		"host": "localhost",
		"port": 27017,
		"db-name": "test",

		"path": "data"
	},
	
	"logger": {
		"path": "logs",
		"configuration": {
		    "console": {
		        "json": false
		    },
		    "file": {
	            "fileName": "volog.log",
	            "level": "info",
	            
	            "maxSize": 512000,
	            "maxFiles": null
	        }
		}
	}
}