{
	"port": 8080,
	"task": {
		"collection": "tasks"
	},
	"mongo": {
		"host": "localhost",
		"port": 27017,
		"db-name": "test"
	},
	"logger": {
		"logPath": "logs/",
		"loggers": {
			"default": {
				"targets": "Console|File",
				"filename": "volog.log",
				"colorize": true,
				"maxsize": 204800,
				"timestamp": "yyyy-mm-dd HH:MM:ss"
			},
			"server": {
				"targets": "File",
				"filename": "volog-server.log",
				"timestamp": "yyyy-mm-dd HH:MM:ss",
				"maxsize": 204800,
				"json": false
			},
			"error": {
				"targets": "File",
				"filename": "volog-error.log",
				"timestamp": "yyyy-mm-dd HH:MM:ss",
				"maxsize": 204800,
				"json": false,
				"level": "error"
			}
		}
	}
}