{
	"port": 80,
	
	"task_repository": {
		"host": "http://pc-volonterio",
		"port": 8080,
		"basePath": "/CrowdSearch_prototype_v2",

		"repository": {
			"host": "localhost",
			"port": 27017,
			"db-name": "test",

			"collection": "task",

			"path": "tasks"
		},

		"API": {
			"details": {
				"method": "GET",
				"path": "getTask.do?q={taskID}"
			},
			"list": {
				"method": "GET",
				"path": "getTaskComposition.do?q={taskID}"
			},
			"save": {
				"method": "POST",
				"path": "postAnswer.do"
			}
		}
	},

	"mongo": {
		"host": "localhost",
		"port": 27017,
		"db-name": "test",

		"path": "data"
	},
	
	"logger": {
		"path": "logs",
		"configuration": {
		    "console": {
		        "json": false
		    },
		    "file": {
	            "fileName": "volog.log",
	            "level": "info",
	            
	            "maxSize": 512000,
	            "maxFiles": null
	        }
		}
	}
}