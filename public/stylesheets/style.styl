border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments
linear-bg()
	background-image: -moz-linear-gradient( arguments )
	background-image: -webkit-linear-gradient( arguments )
	background-image: -ms-linear-gradient( arguments )
	background-image: -o-linear-gradient( arguments )

$footerHeight = 2em
body
	margin ($footerHeight/2)
	margin-bottom $footerHeight*1.3
	background-color #fefefe
	font-family sans-serif
	font-size 12pt

header
	img
		vertical-align middle
		margin-right 1em
		border-radius 50px
	h1
		$color = #ddd
		margin 0
		padding 0
		font-size 2em
		color $color
		display inline

nav
	margin 0.2em 0
	ul
		list-style none
		margin 0
		padding 0
		li
			display inline-block
			$linkBG = #ddd
			$linkColor = #f00
			a
				display inline-block
				border 1px solid darken($linkBG,40%)
				border-right-color transparent
				padding 0.5em 1em
				text-decoration none
				color $linkColor
				linear-bg lighten($linkBG,40%), $linkBG
				&:hover
					text-decoration underline
					linear-bg $linkBG, lighten($linkBG,40%)
			&:first-child
				a
					border-top-left-radius 5px
					border-bottom-left-radius 5px
			&:last-child
				a
					border-top-right-radius 5px
					border-bottom-right-radius 5px
					border-right-color darken($linkBG,40%)

section.content
	h1
		$color = #555
		margin 0
		padding 0
		font-size 2em
		color $color

footer
	$height = $footerHeight
	$footerColor = #efefef
	linear-bg lighten($footerColor,40%), $footerColor
	border 1px solid darken($footerColor,30%)
	border-bottom none
	border-top-left-radius ($height/4)
	border-top-right-radius ($height/4)
	color darken($footerColor,50%)
	position fixed
	bottom 0
	left ($height/2)
	right ($height/2)
	height $height
	line-height $height
	padding-right ($height/2)
	text-align right
	
	span
		font-size 0.8em
	img
		margin-left 0.5em
		vertical-align text-bottom